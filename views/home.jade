doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Home
        link(rel='stylesheet', href='../css/home.css')
        script(type='text/javascript', src='head.js')
    body
        .fileInputContainer
            form(action='/savePhoto', method='POST',enctype="multipart/form-data")
                input.fileInput(type='file', name='familyPhoto',id='familyPhoto',accept='image/*' )
                .btn
                    button.btn(type='submit') Save
                | .file-path-wrapper
                | input.file-path.validate(type='text' )

        .content-bottom
            form(action='/saveMessage', method='POST')
                .text
                    textarea#message(type='text', name='message', placeholder='#{messages.message}')
                .btn
                    button.btn(type='submit') Save
